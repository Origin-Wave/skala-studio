---
import Contact from "@components/Contact.astro";
import Logo from "@components/Logo.astro";
import Container from "@components/ui/container/Container.astro";
---

<Container>
  <header class="header">
    <Logo class="header__logo" />
    <Contact class="header__contact" compact={true} />
  </header>
</Container>

<style lang="scss">
  @use "@styles/utils" as utils;

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: var(--ss-border-separator);
    padding: var(--ss-flow-space-1) 0;
  }

  .header__logo {
    --header-logo-size: var(--ss-size-9);

    width: var(--header-logo-size);
    height: auto;

    @include utils.media(tablet-screen) {
      --header-logo-size: var(--ss-size-11);
    }
  }

  .header__contact {
    text-align: right;
  }
</style>
